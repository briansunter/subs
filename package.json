{
  "name": "subs",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --hot run index.ts",
    "start": "bun run index.ts",
    "dev:workers": "wrangler dev",
    "deploy:workers": "wrangler deploy",
    "workers:tail": "wrangler tail",
    "workers:secret": "wrangler secret put",
    "build": "bun build index.ts --outdir ./dist --target bun --minify",
    "lint": "bunx biome check .",
    "typecheck": "bunx tsc --noEmit",
    "lint:fix": "bunx biome check --write .",
    "format": "bunx biome format --write .",
    "test": "bun test",
    "test:unit": "bun test test/unit",
    "test:integration": "bun test test/integration",
    "test:coverage": "bun test --coverage",
    "test:coverage:lcov": "bun test --coverage --coverage-reporter=lcov",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "docker:build": "docker build -t signup-api .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "vitepress": "^1.6.3",
    "wrangler": "^4.63.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "elysia": "^1.4.21",
    "jose": "^6.1.3",
    "pino": "^10.1.1",
    "prom-client": "^15.1.3",
    "zod": "^4.3.5"
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "bunx biome check --write --no-errors-on-unmatched"
    ]
  }
}
